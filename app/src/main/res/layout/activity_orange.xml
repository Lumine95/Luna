<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_9">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:contentInsetStart="7dp"
        app:navigationIcon="@mipmap/ic_left_arrow_white"
        app:popupTheme="@style/AppTheme.ToolbarPopupOverlay"
        app:title="Avatar"
        app:titleTextColor="@color/white" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <com.android.library.view.CircleImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_month" />

        <com.android.library.view.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_test"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="3.5dp" />

    </RelativeLayout>
</RelativeLayout>
