<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="100dp"
            android:layout_height="133.3dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="@dimen/margin_size_8"
            android:background="@mipmap/ic_default_bilibili"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_size_30"
            android:layout_marginTop="@dimen/margin_size_9"
            android:layout_toEndOf="@id/iv_card"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/color_3"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_size_9"
            android:layout_marginEnd="@dimen/margin_size_25"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/iv_card"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/color_6"
            tools:text="@string/app_name" />

        <com.android.library.view.LabelView
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:lv_background_color="@color/colorPrimary"
            app:lv_gravity="TOP_RIGHT"
            app:lv_text_size="@dimen/text_size_11" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>