<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarPopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/white</item>
        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search</item>
        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close</item>
        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back</item>
        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>
        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>
        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/color_3</item>
        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/color_8</item>
        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_movie_hint</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/color_6</item>
        <item name="android:textColorSecondary">@color/color_6</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@color/white</item>
        <item name="bs_dividerColor">@color/transparent</item>
        <item name="bs_numColumns">5</item>
        <item name="bs_listStyle">@style/BottomSheet.List</item>
    </style>

    <!-- dialog动画 -->
    <style name="anim_dialog">
        <item name="android:windowEnterAnimation">@anim/anim_popup_zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_zoom_exit</item>
    </style>
</resources>
